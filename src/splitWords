package Programs;

public class Split_Words {

	public static void main(String[] args) {
		
		CountCharaceterandSplit("Geek for Geeks");
		
	}
	

	public static void CountCharaceterandSplit(String str)
	
	{

	//Creat an array of char type
	char ch[]=str.toCharArray();
	
	for(int i=0;i<ch.length;i++)
	{
	 String s="";
	
	 while(i<ch.length && ch[i] !=' ')
	 {
		 
	  s=s+ch[i];
	  i++;
	}
	
	 if(s.length()>0)
	 
		 		 System.out.println(s+ "->"+ s.length());
	 

	}
}

}
